\ProvidesPackage{beamercolorthemeRPTU}[2022/01/10 v1.0 beamer theme in the corporate design of the University of Kaiserslautern-Landau]

\mode<presentation>

\setbeamercolor*{structure}{fg=black,bg=secondaryrptuthemecolor!20!white}
\setbeamercolor*{palette primary}{use=structure,fg=mainrptuthemecolor,bg=white}
\setbeamercolor*{palette secondary}{use=structure,fg=secondaryrptuthemecolor,bg=white}
\setbeamercolor*{palette tertiary}{use=structure,fg=black,bg=white}
\setbeamercolor*{palette quaternary}{fg=tuklblue,bg=mainrptuthemecolor!30!white}
\setbeamercolor*{alerted text}{fg=mainrptuthemecolor}
\setbeamercolor*{box text}{fg=white}
\setbeamercolor*{navigation symbols}{fg=secondaryrptuthemecolor}
\setbeamercolor*{titlelike}{parent=palette primary}
\setbeamercolor*{logo titlepage}{fg=white}
\setbeamercolor*{subtitle}{fg=mainrptuthemecolor}
\setbeamercolor*{author}{fg=mainrptuthemecolor}
\setbeamercolor*{institute}{fg=mainrptuthemecolor}
\setbeamercolor*{date}{fg=mainrptuthemecolor}
\setbeamercolor*{framesubtitle}{fg=mainrptuthemecolor}
\setbeamercolor*{item}{fg = mainrptuthemecolor}
\setbeamercolor*{block title}{use=structure,fg=mainrptuthemecolor,bg=secondaryrptuthemecolor}
\setbeamercolor*{block title alerted}{use=structure,fg=mainrptuthemecolor,bg=secondaryrptuthemecolor}
\setbeamercolor*{block title example}{use=structure,fg=mainrptuthemecolor,bg=secondaryrptuthemecolor}
\setbeamercolor*{block body}{parent=box text, use=block title,bg=block title.bg}
\setbeamercolor*{block body alerted}{parent=box text,use=block title alerted,bg=block title alerted.bg}
\setbeamercolor*{block body example}{parent=box text,use=block title example,bg=block title example.bg}
\setbeamercolor{section in toc}{fg=black}
\setbeamercolor{subsection in toc}{fg=black}

\mode
<all>
